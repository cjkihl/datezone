{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": ["NODE_ENV"],
	"globalPassThroughEnv": ["CI", "VERCEL", "GITHUB_TOKEN", "NPM_TOKEN"],
	"ui": "stream",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".dist"]
		},
		"publish-npm": {
			"cache": false,
			"dependsOn": ["^build", "^lint", "^test"]
		},
		"test": {
			"cache": false,
			"dependsOn": ["^build"]
		},
		"lint": {
			"cache": false,
			"outputs": []
		},
		"lint-fix": {
			"cache": false,
			"outputs": []
		},
		"format": {
			"cache": false,
			"outputs": []
		}
	}
}
