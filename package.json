{
	"name": "@datezone/monorepo",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"test": "bun test",
		"build": "turbo build",
		"build-pkg": "turbo build --filter=./packages/*",
		"resolve": "bun run resolve-deps resolve",
		"release": "bun run resolve-deps && bun run build && changeset publish",
		"clean": "git clean -fxd -e .env.local",
		"lint": "biome check .",
		"lint-fix": "biome check --write --unsafe .",
		"format": "biome format .",
		"type-check": "turbo type-check",
		"up": "bunx npm-check-updates -ws --root --format group -u",
		"bench": "bun tools/benchmark/run.ts",
		"bench:compare": "bun tools/benchmark/compare.ts",
		"bench:comprehensive": "bun tools/benchmark/comprehensive-compare.ts",
		"bench:report": "bun tools/benchmark/format-results.ts",
		"bench:cache": "bun tools/benchmark/run-with-output.ts cache-test.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0",
		"@cjkihl/changeset-dep-resolver": "^0.1.5",
		"@cjkihl/tsconfig": "^0.1.17",
		"@cjkihl/create-exports": "^0.1.17",
		"@date-fns/tz": "^1.2.0",
		"@types/bun": "latest",
		"@types/semver": "^7.7.0",
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0",
		"mitata": "^1.0.34",
		"semver": "^7.7.2",
		"turbo": "^2.5.4",
		"typescript": "^5"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"packageManager": "bun@1.2.16",
	"workspaces": ["packages/*", "shared/*", "tools/*"]
}
