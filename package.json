{
	"name": "@datezone/monorepo",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"test": "bun test",
		"dev": "bun run -F docs dev",
		"build": "turbo build --filter=./packages/*",
		"changeset": "changeset",
		"resolve": "bun run resolve-deps resolve",
		"restore": "bun run resolve-deps restore",
		"release": "bun run resolve && bun run build && changeset publish",
		"clean": "git clean -fxd -e .env.local",
		"lint": "biome check . && manypkg check",
		"lint-fix": "biome check --write --unsafe . && manypkg fix",
		"format": "biome format .",
		"type-check": "turbo type-check",
		"up": "bunx npm-check-updates -ws --root --format group -u",
		"bench-debug": "bun run -F benchmarks debug",
		"bench-report": "bun run -F benchmarks comprehensive && bun run -F benchmarks report",
		"bench-cache": "bun run -F benchmarks cache"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.5",
		"@changesets/cli": "^2.29.5",
		"@cjkihl/changeset-dep-resolver": "^1.0.3",
		"@cjkihl/create-exports": "^1.0.2",
		"@cjkihl/tsconfig": "^1.0.1",
		"@date-fns/tz": "^1.2.0",
		"@manypkg/cli": "^0.24.0",
		"@types/bun": "latest",
		"@types/semver": "^7.7.0",
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0",
		"fumadocs-core": "^15.5.5",
		"fumadocs-mdx": "^11.6.9",
		"fumadocs-ui": "^15.5.5",
		"mitata": "^1.0.34",
		"semver": "^7.7.2",
		"turbo": "^2.5.4",
		"typescript": "^5",
		"zod": "^3.25.67"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"packageManager": "bun@1.2.18",
	"workspaces": [
		"packages/*",
		"apps/*",
		"shared/*",
		"tools/*"
	]
}
